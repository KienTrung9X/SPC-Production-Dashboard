<!DOCTYPE html>
<html lang="vi">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>DB2 Production Dashboard</title>
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Inter:wght@300;400;500;600;700&display=swap" rel="stylesheet">
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css" rel="stylesheet">
    <style>
        :root {
            --primary-color: #3b82f6;
            --primary-dark: #2563eb;
            --secondary-color: #64748b;
            --success-color: #10b981;
            --warning-color: #f59e0b;
            --danger-color: #ef4444;
            --background-color: #f8fafc;
            --panel-background: #ffffff;
            --text-color: #334155;
            --text-light: #64748b;
            --header-color: #1e293b;
            --border-color: #e2e8f0;
            --hover-color: #f1f5f9;
            --shadow: 0 1px 3px 0 rgba(0, 0, 0, 0.1), 0 1px 2px 0 rgba(0, 0, 0, 0.06);
            --shadow-lg: 0 10px 15px -3px rgba(0, 0, 0, 0.1), 0 4px 6px -2px rgba(0, 0, 0, 0.05);
        }

        * {
            box-sizing: border-box;
        }

        body {
            font-family: 'Inter', -apple-system, BlinkMacSystemFont, "Segoe UI", Roboto, sans-serif;
            margin: 0;
            background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
            min-height: 100vh;
            color: var(--text-color);
        }

        .header {
            background: rgba(255, 255, 255, 0.95);
            backdrop-filter: blur(10px);
            padding: 1.5rem 2rem;
            border-bottom: 1px solid var(--border-color);
            box-shadow: var(--shadow);
            position: sticky;
            top: 0;
            z-index: 100;
        }

        .header-content {
            display: flex;
            justify-content: space-between;
            align-items: center;
            max-width: 1400px;
            margin: 0 auto;
        }

        h1 {
            font-size: 1.875rem;
            font-weight: 700;
            color: var(--header-color);
            margin: 0;
            display: flex;
            align-items: center;
            gap: 0.75rem;
        }

        .header-stats {
            display: flex;
            gap: 1.5rem;
            align-items: center;
        }

        .stat-item {
            text-align: center;
        }

        .stat-number {
            font-size: 1.5rem;
            font-weight: 700;
            color: var(--primary-color);
        }

        .stat-label {
            font-size: 0.75rem;
            color: var(--text-light);
            text-transform: uppercase;
            letter-spacing: 0.05em;
        }

        .container {
            max-width: 1400px;
            margin: 0 auto;
            padding: 2rem;
        }

        .filters {
            background: var(--panel-background);
            border-radius: 1rem;
            padding: 1.5rem;
            margin-bottom: 2rem;
            box-shadow: var(--shadow);
            border: 1px solid var(--border-color);
        }

        .filters-grid {
            display: grid;
            grid-template-columns: repeat(auto-fit, minmax(200px, 1fr));
            gap: 1rem;
            align-items: end;
        }

        .filter-group {
            display: flex;
            flex-direction: column;
            gap: 0.5rem;
        }

        .filter-label {
            font-size: 0.875rem;
            font-weight: 500;
            color: var(--text-color);
        }

        .filter-input {
            padding: 0.75rem;
            border: 1px solid var(--border-color);
            border-radius: 0.5rem;
            font-size: 0.875rem;
            transition: all 0.2s;
        }

        .filter-input:focus {
            outline: none;
            border-color: var(--primary-color);
            box-shadow: 0 0 0 3px rgba(59, 130, 246, 0.1);
        }

        .btn {
            padding: 0.75rem 1.5rem;
            border: none;
            border-radius: 0.5rem;
            font-size: 0.875rem;
            font-weight: 500;
            cursor: pointer;
            transition: all 0.2s;
            display: inline-flex;
            align-items: center;
            gap: 0.5rem;
        }

        .btn-primary {
            background: var(--primary-color);
            color: white;
        }

        .btn-primary:hover {
            background: var(--primary-dark);
            transform: translateY(-1px);
            box-shadow: var(--shadow-lg);
        }

        .btn-secondary {
            background: var(--secondary-color);
            color: white;
        }

        .btn-success {
            background: var(--success-color);
            color: white;
        }

        .panels-grid {
            display: grid;
            grid-template-columns: 1fr;
            gap: 2rem;
        }

        .panel {
            background: var(--panel-background);
            border-radius: 1rem;
            box-shadow: var(--shadow);
            border: 1px solid var(--border-color);
            overflow: hidden;
        }

        .panel-header {
            display: flex;
            align-items: center;
            justify-content: space-between;
            padding: 1.5rem;
            border-bottom: 1px solid var(--border-color);
            background: linear-gradient(135deg, #f8fafc 0%, #f1f5f9 100%);
        }

        .panel-title {
            display: flex;
            align-items: center;
            gap: 0.75rem;
        }

        h2 {
            font-size: 1.25rem;
            font-weight: 600;
            color: var(--header-color);
            margin: 0;
        }

        .panel-icon {
            width: 2rem;
            height: 2rem;
            background: var(--primary-color);
            border-radius: 0.5rem;
            display: flex;
            align-items: center;
            justify-content: center;
            color: white;
        }

        .panel-actions {
            display: flex;
            gap: 0.75rem;
        }

        .table-container {
            overflow-x: auto;
            max-height: 600px;
            overflow-y: auto;
        }

        table {
            width: 100%;
            border-collapse: collapse;
        }

        th, td {
            padding: 1rem;
            text-align: left;
            font-size: 0.875rem;
            border-bottom: 1px solid var(--border-color);
        }
        
        thead th {
            color: var(--text-light);
            font-weight: 600;
            text-transform: uppercase;
            letter-spacing: 0.05em;
            background: var(--hover-color);
            position: sticky;
            top: 0;
            z-index: 10;
        }

        tbody tr {
            transition: background-color 0.2s;
        }

        tbody tr:hover {
            background-color: var(--hover-color);
        }

        tbody tr:last-child td {
            border-bottom: none;
        }

        .no-data {
            text-align: center;
            padding: 3rem;
            color: var(--text-light);
        }

        .no-data i {
            font-size: 3rem;
            margin-bottom: 1rem;
            opacity: 0.5;
        }

        .status-badge {
            display: inline-flex;
            align-items: center;
            gap: 0.25rem;
            padding: 0.25rem 0.75rem;
            border-radius: 9999px;
            font-weight: 500;
            font-size: 0.75rem;
        }

        .status-completed {
            background-color: #dcfce7;
            color: #166534;
        }

        .status-ontime {
            background-color: #dbeafe;
            color: #1d4ed8;
        }

        .status-delay {
            background-color: #fee2e2;
            color: #991b1b;
        }

        .loading {
            display: inline-flex;
            align-items: center;
            gap: 0.5rem;
            color: var(--text-light);
        }

        .spinner {
            width: 1rem;
            height: 1rem;
            border: 2px solid var(--border-color);
            border-top: 2px solid var(--primary-color);
            border-radius: 50%;
            animation: spin 1s linear infinite;
        }

        @keyframes spin {
            0% { transform: rotate(0deg); }
            100% { transform: rotate(360deg); }
        }

        .fade-in {
            animation: fadeIn 0.5s ease-in;
        }

        @keyframes fadeIn {
            from { opacity: 0; transform: translateY(10px); }
            to { opacity: 1; transform: translateY(0); }
        }

        @media (max-width: 768px) {
            .header-content {
                flex-direction: column;
                gap: 1rem;
            }

            .container {
                padding: 1rem;
            }

            .filters-grid {
                grid-template-columns: 1fr;
            }

            th, td {
                padding: 0.5rem;
                font-size: 0.75rem;
            }
        }
    </style>
</head>
<body>
    <div class="header">
        <div class="header-content">
            <h1>
                <i class="fas fa-chart-line"></i>
                DB2 Production Dashboard
            </h1>
            <div class="header-stats">
                <div class="stat-item">
                    <div class="stat-number" id="trz50-count">0</div>
                    <div class="stat-label">TRZ50 Records</div>
                </div>
                <div class="stat-item">
                    <div class="stat-number" id="production-count">0</div>
                    <div class="stat-label">Production Records</div>
                </div>
            </div>
        </div>
    </div>

    <main class="container">
        <div class="filters">
            <div class="filters-grid">
                <div class="filter-group">
                    <label class="filter-label">Start Date</label>
                    <input type="date" class="filter-input" id="startDate" value="2025-01-01">
                </div>
                <div class="filter-group">
                    <label class="filter-label">End Date</label>
                    <input type="date" class="filter-input" id="endDate" value="2025-12-31">
                </div>
                <div class="filter-group">
                    <label class="filter-label">Line Code</label>
                    <select class="filter-input" id="lineCode">
                        <option value="315">315</option>
                        <option value="312">312</option>
                        <option value="311">311</option>
                        <option value="310">310</option>
                    </select>
                </div>
                <div class="filter-group">
                    <label class="filter-label">Row Limit</label>
                    <select class="filter-input" id="rowLimit">
                        <option value="100">100</option>
                        <option value="500">500</option>
                        <option value="1000" selected>1000</option>
                        <option value="5000">5000</option>
                    </select>
                </div>
                <div class="filter-group">
                    <button class="btn btn-primary" onclick="loadTRZ50()">
                        <i class="fas fa-search"></i>
                        Load TRZ50
                    </button>
                </div>
                <div class="filter-group">
                    <button class="btn btn-secondary" onclick="loadProduction()">
                        <i class="fas fa-industry"></i>
                        Load Production
                    </button>
                </div>
            </div>
        </div>

        <div class="panels-grid">
            <div class="panel fade-in">
                <div class="panel-header">
                    <div class="panel-title">
                        <div class="panel-icon">
                            <i class="fas fa-database"></i>
                        </div>
                        <h2>TRZ50 Data</h2>
                    </div>
                    <div class="panel-actions">
                        <button class="btn btn-success" onclick="exportData('trz50')">
                            <i class="fas fa-download"></i>
                            Export CSV
                        </button>
                    </div>
                </div>
                <div class="table-container">
                    <table id="trz50-table">
                        <thead>
                            <tr>
                                <th><i class="fas fa-calendar"></i> Due Date</th>
                                <th><i class="fas fa-hashtag"></i> PR No</th>
                                <th><i class="fas fa-barcode"></i> Item Code</th>
                                <th><i class="fas fa-tag"></i> Item Name</th>
                                <th><i class="fas fa-sort-numeric-up"></i> Quantity</th>
                                <th><i class="fas fa-cogs"></i> Action</th>
                                <th><i class="fas fa-box"></i> Bin</th>
                            </tr>
                        </thead>
                        <tbody></tbody>
                    </table>
                    <div id="no-trz50" class="no-data">
                        <i class="fas fa-inbox"></i>
                        <div>Click "Load TRZ50" to fetch data</div>
                    </div>
                </div>
            </div>

            <div class="panel fade-in">
                <div class="panel-header">
                    <div class="panel-title">
                        <div class="panel-icon">
                            <i class="fas fa-chart-bar"></i>
                        </div>
                        <h2>Production Report</h2>
                    </div>
                    <div class="panel-actions">
                        <button class="btn btn-success" onclick="exportData('production')">
                            <i class="fas fa-download"></i>
                            Export CSV
                        </button>
                    </div>
                </div>
                <div class="table-container">
                    <table id="production-table">
                        <thead>
                            <tr>
                                <th><i class="fas fa-stream"></i> Line</th>
                                <th><i class="fas fa-hashtag"></i> PR</th>
                                <th><i class="fas fa-barcode"></i> Item</th>
                                <th><i class="fas fa-tag"></i> Item Name</th>
                                <th><i class="fas fa-sort-numeric-up"></i> Qty</th>
                                <th><i class="fas fa-calendar-check"></i> Est Date</th>
                                <th><i class="fas fa-calendar-day"></i> Act Date</th>
                                <th><i class="fas fa-traffic-light"></i> Status</th>
                            </tr>
                        </thead>
                        <tbody></tbody>
                    </table>
                    <div id="no-production" class="no-data">
                        <i class="fas fa-inbox"></i>
                        <div>Click "Load Production" to fetch data</div>
                    </div>
                </div>
            </div>
        </div>
    </main>

    <script>
        // === STATE MANAGEMENT ===
        let trz50Data = [];
        let lastKnownTimestamp = null; // ISO String format
        let pollingInterval = null;
        let isLoading = false;

        // === CONSTANTS ===
        const STORAGE_KEY_DATA = 'trz50_cached_data';
        const STORAGE_KEY_TIMESTAMP = 'trz50_last_timestamp';

        // === CORE LOGIC ===
        document.addEventListener('DOMContentLoaded', function() {
            initializeDashboard();
        });

        function initializeDashboard() {
            console.log('Initializing dashboard...');
            const cachedData = localStorage.getItem(STORAGE_KEY_DATA);
            const cachedTimestamp = localStorage.getItem(STORAGE_KEY_TIMESTAMP);

            if (cachedData && cachedTimestamp) {
                console.log('Found cached data. Rendering from localStorage.');
                trz50Data = JSON.parse(cachedData);
                lastKnownTimestamp = cachedTimestamp;

                renderTRZ50Table(trz50Data); // Render the full cached table
                checkForUpdates();      // Immediately check for updates since last visit
                startPolling();         // Start the regular polling
            } else {
                console.log('No cached data. Waiting for user to load data.');
                // Hiển thị thông báo ban đầu
                const noDataEl = document.getElementById('no-trz50');
                noDataEl.style.display = 'block';
                noDataEl.innerHTML = '<i class="fas fa-inbox"></i><div>Click "Load TRZ50" to fetch data</div>';
            }
        }

        async function loadTRZ50() {
            if (isLoading) return;
            console.log('Starting initial full load for TRZ50 data...');
            
            const btn = document.querySelector('button[onclick="loadTRZ50()"]');
            setLoadingState(btn, true, '<i class="fas fa-search"></i> Load TRZ50');

            try {
                const params = getFilterParams();
                const url = `/api/trz50${params ? '?' + params : ''}`;
                const response = await fetch(url);
                if (!response.ok) throw new Error(`HTTP ${response.status}`);

                const data = await response.json();
                console.log(`Initial load successful with ${data.length} records.`);

                trz50Data = data;
                renderTRZ50Table(data);

                const latestTimestamp = findLatestTimestamp(data);
                if (latestTimestamp) {
                    lastKnownTimestamp = latestTimestamp.toISOString();
                    console.log(`New latest timestamp: ${lastKnownTimestamp}`);
                    localStorage.setItem(STORAGE_KEY_DATA, JSON.stringify(data));
                    localStorage.setItem(STORAGE_KEY_TIMESTAMP, lastKnownTimestamp);
                }

                startPolling();
            } catch (error) {
                console.error('Error during initial load:', error);
                showError(error.message);
            } finally {
                setLoadingState(btn, false, '<i class="fas fa-search"></i> Load TRZ50');
            }
        }

        async function checkForUpdates() {
            if (!lastKnownTimestamp || isLoading) {
                console.log('Skipping update check (no timestamp or already loading).');
                return;
            }

            console.log(`Checking for updates since ${lastKnownTimestamp}...`);
            isLoading = true;

            try {
                const lineCode = document.getElementById('lineCode').value;
                const url = `/api/trz50/updates?since=${lastKnownTimestamp}&lineCode=${lineCode}`;

                const response = await fetch(url);
                if (!response.ok) throw new Error(`HTTP ${response.status}`);

                const newData = await response.json();
                if (newData.length > 0) {
                    console.log(`Found ${newData.length} new records.`);

                    // Thêm record mới vào bảng và vào mảng data chính
                    appendRowsToTRZ50Table(newData);
                    trz50Data.push(...newData);

                    // Cập nhật lại timestamp và lưu vào localStorage
                    const latestTimestamp = findLatestTimestamp(newData);
                    if (latestTimestamp) {
                        lastKnownTimestamp = latestTimestamp.toISOString();
                        console.log(`New latest timestamp updated to: ${lastKnownTimestamp}`);
                        localStorage.setItem(STORAGE_KEY_TIMESTAMP, lastKnownTimestamp);
                        localStorage.setItem(STORAGE_KEY_DATA, JSON.stringify(trz50Data));
                    }
                } else {
                    console.log('No new updates.');
                }
            } catch (error) {
                console.error('Error checking for updates:', error);
                // Không hiển thị lỗi cho người dùng để tránh làm phiền
            } finally {
                isLoading = false;
            }
        }

        function startPolling() {
            if (pollingInterval) clearInterval(pollingInterval);
            console.log('Starting polling for updates every 60 seconds.');
            pollingInterval = setInterval(checkForUpdates, 60000);
        }

        // === RENDERING LOGIC ===
        function renderTRZ50Table(data) {
            const tableBody = document.querySelector('#trz50-table tbody');
            const noDataEl = document.getElementById('no-trz50');
            const countEl = document.getElementById('trz50-count');

            tableBody.innerHTML = ''; // Xóa toàn bộ bảng cũ
            countEl.textContent = data.length;

            if (data.length === 0) {
                noDataEl.style.display = 'block';
                noDataEl.innerHTML = '<i class="fas fa-exclamation-circle"></i><div>No TRZ50 data found</div>';
                return;
            }
            noDataEl.style.display = 'none';
            appendRowsToTRZ50Table(data); // Dùng hàm append để vẽ
        }

        function appendRowsToTRZ50Table(rows) {
            const tableBody = document.querySelector('#trz50-table tbody');
            const noDataEl = document.getElementById('no-trz50');
            const countEl = document.getElementById('trz50-count');

            if (tableBody.children.length === 0 && rows.length > 0) {
                 noDataEl.style.display = 'none';
            }

            rows.forEach((row, index) => {
                const tr = document.createElement('tr');
                tr.className = 'fade-in';
                tr.innerHTML = `
                    <td>${formatDate(row.RADURZ) || ''} ${formatTime(row.RADTRZ) || ''}</td>
                    <td><strong>${row.PSHNRZ || ''}</strong></td>
                    <td><code>${row.ITMCRZ || ''}</code></td>
                    <td>${row.IT1IA0 || ''}</td>
                    <td><span class="status-badge status-ontime">${row.ALCQRZ || ''}</span></td>
                    <td><span class="status-badge status-completed">${row.MSACRZ || ''}</span></td>
                    <td>${row.BKTNRZ || row.WABCRZ || ''}</td>
                `;
                tableBody.insertBefore(tr, tableBody.firstChild); // Thêm vào đầu bảng
            });
             // We update the total count based on the number of rows in the table body
            countEl.textContent = tableBody.children.length;
        }

        // === HELPER FUNCTIONS ===
        function parseDbTimestamp(date, time) {
            const dateStr = String(date);
            const timeStr = ('000000' + time).slice(-6);
            if (dateStr.length < 8) return null;

            const year = dateStr.substring(0, 4);
            const month = dateStr.substring(4, 6);
            const day = dateStr.substring(6, 8);
            const hour = timeStr.substring(0, 2);
            const minute = timeStr.substring(2, 4);
            const second = timeStr.substring(4, 6);
            return new Date(`${year}-${month}-${day}T${hour}:${minute}:${second}`);
        }

        function findLatestTimestamp(data) {
            if (!data || data.length === 0) return null;
            return data.reduce((latest, current) => {
                const currentDate = parseDbTimestamp(current.RADURZ, current.RADTRZ);
                if (!currentDate) return latest;
                return currentDate > latest ? currentDate : latest;
            }, new Date(0));
        }

        function setLoadingState(button, loading, originalContent) {
            isLoading = loading;
            if (button) {
                button.disabled = loading;
                button.innerHTML = loading ? '<div class="spinner"></div> Loading...' : originalContent;
            }
        }

        function getFilterParams() {
            const startDate = document.getElementById('startDate').value;
            const endDate = document.getElementById('endDate').value;
            const lineCode = document.getElementById('lineCode').value;
            const rowLimit = document.getElementById('rowLimit').value;
            const params = new URLSearchParams();
            if (startDate) params.append('startDate', startDate);
            if (endDate) params.append('endDate', endDate);
            if (lineCode) params.append('lineCode', lineCode);
            if (rowLimit) params.append('rowLimit', rowLimit);
            return params.toString();
        }

        function formatDate(dateNum) {
            if (!dateNum) return '';
            const dateStr = String(dateNum);
            if (dateStr.length !== 8) return dateStr;
            return `${dateStr.substring(6, 8)}/${dateStr.substring(4, 6)}/${dateStr.substring(0, 4)}`;
        }

        function formatTime(timeNum) {
            if (timeNum === undefined || timeNum === null) return '';
            const timeStr = ('000000' + timeNum).slice(-6);
            return `${timeStr.substring(0, 2)}:${timeStr.substring(2, 4)}:${timeStr.substring(4, 6)}`;
        }

        function showError(message) {
            alert(`Error: ${message}`);
        }

        function exportData(type) {
            window.open(`/api/export/${type}`, '_blank');
        }

        // --- Production Report Logic (Unchanged) ---
        async function loadProduction() {
            const params = getFilterParams();
            const url = `/api/production${params ? '?' + params : ''}`;
            const btn = event?.target;
            setLoadingState(btn, true, '<i class="fas fa-industry"></i> Load Production');
            try {
                const response = await fetch(url);
                if (!response.ok) throw new Error(`HTTP ${response.status}`);
                const data = await response.json();
                processProduction(data, 'production-table', 'no-production', 'production-count');
            } catch (error) {
                showError(error.message)
            } finally {
                setLoadingState(btn, false, '<i class="fas fa-industry"></i> Load Production');
            }
        }

        function processProduction(data, tableId, noDataId, countId) {
            const tableBody = document.querySelector(`#${tableId} tbody`);
            const noDataEl = document.getElementById(noDataId);
            const countEl = document.getElementById(countId);
            tableBody.innerHTML = '';
            countEl.textContent = data.length;
            if (data.length === 0) {
                noDataEl.style.display = 'block';
                noDataEl.innerHTML = '<i class="fas fa-exclamation-circle"></i><div>No production data found</div>';
                return;
            }
            noDataEl.style.display = 'none';
            data.forEach((row, index) => {
                const tr = document.createElement('tr');
                tr.style.animationDelay = `${index * 0.05}s`;
                tr.className = 'fade-in';
                let statusClass = 'status-completed';
                if (row.delay_day === 'DELAY') statusClass = 'status-delay';
                else if (row.delay_day === 'ONTIME') statusClass = 'status-ontime';
                tr.innerHTML = `
                    <td><strong>${row.line || ''}</strong></td>
                    <td><strong>${row.pr || ''}</strong></td>
                    <td><code>${row.item || ''}</code></td>
                    <td>${row.item1 || ''}</td>
                    <td><span class="status-badge status-ontime">${row.qty || ''}</span></td>
                    <td>${formatDate(row.est_com_d) || ''}</td>
