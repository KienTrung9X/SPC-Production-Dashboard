    <script>
    // =================================================================
    // == Generic Data Source Manager - T√°i c·∫•u tr√∫c cho m·ªü r·ªông    ==
    // =================================================================
    class DataSource {
        constructor(config) {
            this.config = config;
            this.data = [];
            this.lastTimestamp = null;
            this.pollingInterval = null;
            this.isLoading = false;
            this.currentPage = 0;
            this.pageSize = 50;

            this.ui = {
                tableBody: document.querySelector(`#${config.tableId} tbody`),
                noDataEl: document.getElementById(config.noDataId),
                countEl: document.getElementById(config.countId),
                loadBtn: document.getElementById(config.loadBtnId),
                nextBtn: document.getElementById('next-page-btn'),
                prevBtn: document.getElementById('prev-page-btn')
            };
        }

        // --- Public Methods ---
        initialize() {
            console.log(`Initializing ${this.config.name}...`);
            // Load cached data first for fast display
            const storedData = localStorage.getItem(this.config.storage.dataKey);
            const storedTimestamp = localStorage.getItem(this.config.storage.timestampKey);

            if (storedData && storedTimestamp) {
                console.log('Loading from cache, no server call');
                this.data = JSON.parse(storedData);
                this.lastTimestamp = storedTimestamp;
                this.renderTable(this.data);
                this.startPolling();
            } else {
                console.log('No cache found, loading from server');
                this.ui.noDataEl.innerHTML = `<i class="fas fa-inbox"></i><div>Click "Load ${this.config.name}" to fetch data from server</div>`;
            }

            // Add load button event for manual refresh
            if (this.ui.loadBtn) {
                this.ui.loadBtn.addEventListener('click', () => this.performInitialLoad());
            }
            
            // Add pagination button events
            if (this.ui.nextBtn) {
                this.ui.nextBtn.addEventListener('click', () => this.nextPage());
            }
            if (this.ui.prevBtn) {
                this.ui.prevBtn.addEventListener('click', () => this.prevPage());
            }
            
            // Only reload from server when fiscal year changes
            document.getElementById('fiscalYear').addEventListener('change', () => {
                // Clear cache when fiscal year changes
                localStorage.removeItem(this.config.storage.dataKey);
                localStorage.removeItem(this.config.storage.timestampKey);
                this.data = [];
                this.lastTimestamp = null;
                this.performInitialLoad();
            });
            

        }

        async performInitialLoad() {
            if (this.isLoading) return;
            this.setLoadingState(true);

            try {
                const params = getFilterParams();
                const url = `${this.config.api.initialLoad}?${params}`;
                console.log('Loading URL:', url);
                const response = await fetch(url);
                
                if (!response.ok) {
                    const errorText = await response.text();
                    throw new Error(`HTTP ${response.status}: ${errorText}`);
                }

                const newData = await response.json();
                console.log('Loaded data:', newData.length, 'records');
                this.data = newData;
                this.renderTable(newData);

                this.updateAndCacheTimestamp(newData);
                this.startPolling();

            } catch (error) {
                console.error(`Error during initial load for ${this.config.name}:`, error);
                this.ui.noDataEl.innerHTML = `<i class="fas fa-exclamation-triangle"></i><div>Error: ${error.message}</div>`;
            } finally {
                this.setLoadingState(false);
            }
        }

        // --- Private Methods ---
        async checkForUpdates() {
            if (!this.lastTimestamp || this.isLoading) return;
            this.isLoading = true; // Set lock to prevent multiple concurrent updates

            try {
                const lineCode = '315'; // Fixed line code
                const url = `${this.config.api.updates}?since=${this.lastTimestamp}&lineCode=${lineCode}`;
                const response = await fetch(url);
                if (!response.ok) throw new Error(`HTTP ${response.status}`);

                const newRecords = await response.json();
                if (newRecords.length > 0) {
                    this.appendRowsToTable(newRecords);
                    this.data.push(...newRecords);
                    this.updateAndCacheTimestamp(newRecords);
                }
            } catch (error) {
                console.error(`Error checking for updates for ${this.config.name}:`, error);
            } finally {
                this.isLoading = false;
            }
        }

        startPolling() {
            if (this.pollingInterval) clearInterval(this.pollingInterval);
            this.pollingInterval = setInterval(() => this.checkForUpdates(), 600000); // 10 minutes
        }

        updateAndCacheTimestamp(records) {
            const latestTimestamp = this.findLatestTimestamp(records);
            // Ch·ªâ c·∫≠p nh·∫≠t n·∫øu t√¨m th·∫•y timestamp m·ªõi h·ª£p l·ªá
            if (latestTimestamp && latestTimestamp > new Date(0)) {
                this.lastTimestamp = latestTimestamp.toISOString();
                localStorage.setItem(this.config.storage.dataKey, JSON.stringify(this.data));
                localStorage.setItem(this.config.storage.timestampKey, this.lastTimestamp);
            }
        }

        findLatestTimestamp(records) {
            if (!records || records.length === 0) return null;
            const timestampKeyDate = this.config.timestampKeys.date;
            const timestampKeyTime = this.config.timestampKeys.time;

            const initialLatest = this.lastTimestamp ? new Date(this.lastTimestamp) : new Date(0);

            return records.reduce((latest, current) => {
                const currentDate = parseDbTimestamp(current[timestampKeyDate], current[timestampKeyTime]);
                return currentDate > latest ? currentDate : latest;
            }, initialLatest);
        }

        renderTable(records) {
            console.time('renderTable');
            this.ui.tableBody.innerHTML = '';
            this.ui.countEl.textContent = '0';
            if (records.length === 0) {
                this.ui.noDataEl.style.display = 'block';
                this.ui.noDataEl.innerHTML = `<i class="fas fa-exclamation-circle"></i><div>No data found</div>`;
            } else {
                this.ui.noDataEl.style.display = 'none';
                this.currentPage = 0;
                this.renderCurrentPage();
            }
            console.timeEnd('renderTable');
        }
        
        renderCurrentPage() {
            const start = this.currentPage * this.pageSize;
            const end = start + this.pageSize;
            const pageData = this.data.slice(start, end);
            
            this.ui.tableBody.innerHTML = '';
            this.appendRowsToTable(pageData);
            
            // Update pagination button states
            if (this.ui.prevBtn) {
                this.ui.prevBtn.disabled = this.currentPage === 0;
                this.ui.prevBtn.innerHTML = this.currentPage === 0
                    ? '<i class="fas fa-arrow-left"></i> First Page'
                    : '<i class="fas fa-arrow-left"></i> Previous';
            }
            
            if (this.ui.nextBtn) {
                this.ui.nextBtn.disabled = end >= this.data.length;
                this.ui.nextBtn.innerHTML = end >= this.data.length 
                    ? '<i class="fas fa-arrow-right"></i> Last Page'
                    : '<i class="fas fa-arrow-right"></i> Next';
            }
        }
        
        nextPage() {
            const start = (this.currentPage + 1) * this.pageSize;
            if (start < this.data.length) {
                this.currentPage++;
                this.renderCurrentPage();
            }
        }
        
        prevPage() {
            if (this.currentPage > 0) {
                this.currentPage--;
                this.renderCurrentPage();
            }
        }

        appendRowsToTable(records) {
            if (this.ui.tableBody.children.length === 0 && records.length > 0) {
                this.ui.noDataEl.style.display = 'none';
            }
            // Use DocumentFragment for better performance
            const fragment = document.createDocumentFragment();
            records.forEach(row => {
                const tr = document.createElement('tr');
                tr.innerHTML = this.config.rowRenderer(row);
                fragment.appendChild(tr);
            });
            this.ui.tableBody.appendChild(fragment);
            this.ui.countEl.textContent = this.ui.tableBody.children.length;
        }

        setLoadingState(loading) {
            this.isLoading = loading;
            if (this.ui.loadBtn) {
                this.ui.loadBtn.disabled = loading;
                this.ui.loadBtn.innerHTML = loading
                    ? `<div class="spinner"></div> Loading...`
                    : `<i class="fas fa-sync"></i> Load from Server`;
            }
        }
    }

    // =================================================================
    // == Configuration for Data Sources - C·∫•u h√¨nh cho c√°c ngu·ªìn     ==
    // =================================================================


    const productionConfig = {
        name: 'Production',
        tableId: 'production-table',
        noDataId: 'production-no-data',
        countId: 'production-count',
        loadBtnId: 'load-production-btn',
        icon: 'fas fa-industry',
        api: {
            initialLoad: '/api/production',
            updates: '/api/production/updates'
        },
        storage: {
            dataKey: 'production_cached_data',
            timestampKey: 'production_last_timestamp'
        },
        timestampKeys: {
            date: 'RUPUQ0', // D·ª±a tr√™n ph√¢n t√≠ch SQL
            time: 'RUPTQ0'
        },
        rowRenderer: (row) => {
            let statusClass = row.DELAY_DAY === 'DELAY' ? 'status-delay' : 'status-ontime';
            let delayText = row.ACT_COM_D ? row.DELAY_DAY || '' : '';
            
            // Logic for COM_STATUS display
            let comStatusText = '';
            let comStatusClass = 'status-ontime';
            
            if (!row.ACT_COM_D && row.MC_DATE) {
                // ACT_COM_D is null but has MC_DATE data
                comStatusText = 'Ho√†n th√†nh t·∫°i Sewing';
                comStatusClass = 'status-completed';
            } else if (row.ACT_COM_D) {
                // ACT_COM_D has value
                comStatusText = 'COMPLETED';
                comStatusClass = 'status-completed';
            } else {
                comStatusText = 'NOT COMPLETE';
                comStatusClass = 'status-ontime';
            }
            
            // Check if PR is sample or remake
            let prNote = '';
            if (row.REMAKE && row.REMAKE.trim() === 'REMAKE') {
                prNote = '<br><span class="status-badge status-delay" style="font-size: 0.6rem; padding: 0.2rem 0.4rem;">üîÑ REMAKE</span>';
            } else if (row.LINE_NAME && row.LINE_NAME.toString().toUpperCase().includes('SAMPLE')) {
                prNote = '<br><span class="status-badge" style="background: linear-gradient(135deg, #fef3c7, #fed7aa); color: #92400e; border: 1px solid #f59e0b; font-size: 0.6rem; padding: 0.2rem 0.4rem;">üìã SAMPLE</span>';
            }
            
            // Production completion analysis
            const qty = parseInt(row.QTY) || 0;
            const comp = parseInt(row.COMP_PCS) || 0;
            const isCompleted = !!row.ACT_COM_D;
            let compDisplay = comp.toLocaleString();
            let compClass = 'status-ontime';
            
            if (isCompleted && comp < qty) {
                const shortage = qty - comp;
                compClass = 'comp-shortage';
                compDisplay = `${comp.toLocaleString()}<br><small style="font-size: 0.65rem; opacity: 0.8;">‚ö† -${shortage.toLocaleString()}</small>`;
            } else if (isCompleted && comp >= qty) {
                compClass = 'status-completed';
            }
            
            return `
                <td class="sticky-col"><code>${row.PR || ''}</code>${prNote}</td>
                <td>${row.ITEM || ''}</td>
                <td>${[row.ITEM1, row.ITEM2, row.ITEM3].filter(item => item && item.trim()).join('\t')}</td>
                <td class="text-right"><strong style="font-variant-numeric: tabular-nums;">${(row.QTY || 0).toLocaleString()}</strong></td>
                <td class="text-center">${formatDate(row.START_D)}<br><small>${formatTime(row.START_T)}</small></td>
                <td class="text-center">${formatDate(row.EST_COM_D)}<br><small>${formatTime(row.EST_COM_T)}</small></td>
                <td class="text-center">${formatDate(row.ACT_COM_D)}<br><small>${formatTime(row.ACT_COM_T)}</small></td>
                <td class="text-center"><span class="status-badge ${statusClass}">${delayText}</span><br><span class="status-badge ${comStatusClass}">${comStatusText}</span></td>
                <td class="text-right"><span class="status-badge ${compClass}">${compDisplay}</span></td>
                <td class="text-center">${formatDate(row.MC_DATE)}<br><small>${formatTime(row.MC_TIME)}</small></td>
                <td class="text-center">${formatDate(row.PRINT_D)}<br><small>${formatTime(row.PRINT_T)}</small></td>
                <td class="text-center">${formatDate(row.RUPUQ0)}<br><small>${formatTime(row.RUPTQ0)}</small></td>
