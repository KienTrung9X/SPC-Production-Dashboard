                        <thead><tr><th class="sticky-col">PR</th><th>Item</th><th>Item1</th><th class="text-right">Qty</th><th class="text-center">Start</th><th class="text-center">Est Com</th><th class="text-center">Act Com</th><th class="text-center">Status</th><th class="text-right">Comp</th><th class="text-center">MC Date</th><th class="text-center">Print</th><th class="text-center">Tape Out</th></tr></thead>
